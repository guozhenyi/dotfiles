{
    "editor.fontSize": 16,
    "editor.fontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace, 'Microsoft YaHei'",
    "editor.tabSize": 2,
    // 控制显示悬停提示前的等待时间 (毫秒)。
    "editor.hover.delay": 2000,
    // 呈现空格字符(字词之间的单个空格除外)
    "editor.renderWhitespace": "boundary",
    // 在一定数量的等宽字符后显示垂直标尺。输入多个值，显示多个标尺。若数组为空，则不绘制标尺。
    "editor.rulers": [80, 120],
    // 控制资源管理器是否应以紧凑形式呈现文件夹。
    "explorer.compactFolders": false,

    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": true,

    // 启用后，将在保存文件时删除文件末尾的空格。
    "files.trimTrailingWhitespace": true,

    // （设置这些属性，以和Perttier尽量保持格式兼容）
    // 每行最大字符数(0 = 禁用)。
    "html.format.wrapLineLength": 160,
    "html.format.indentInnerHtml": true,
    "html.format.wrapAttributes": "preserve",
    "html.format.extraLiners": "",

    "update.mode": "manual",
    "update.enableWindowsBackgroundUpdates": false,

    // 关闭遥测
    "telemetry.telemetryLevel": "crash",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",

    "window.newWindowDimensions": "inherit",

    "terminal.integrated.defaultProfile.windows": "Command Prompt",

    "security.workspace.trust.untrustedFiles": "open",

    // 在保存时运行代码检查
    "eslint.run": "onSave",
    "eslint.packageManager": "yarn",
    "eslint.codeActionsOnSave.mode": "problems",

    // "less.lint.important": "warning",
    "prettier.printWidth": 160,
    "prettier.singleQuote": true,

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[less]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "files.insertFinalNewline": false,
        "files.trimTrailingWhitespace": false
    },

    // 指定 *.vue 文件的格式化工具为vetur
    "[vue]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "octref.vetur"
    },

    // 配置要为 [python] 语言替代的设置。
    "[python]":  {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },

    "settingsSync.ignoredSettings": [
        "-git.path",
        "-php.validate.executablePath"
    ],

    // "less.compile": {
